resource {
  upcloud_router {
    public_router {
      name = "public_router"
    }
  }

  upcloud_network {
    example_network {
      name = "example_private_net"
      zone = "fi-hel1"
      router = "${upcloud_router.public_router.id}"
      ip_network {
        address = "10.0.0.0/24"
        dhcp = true
        dhcp_default_route = false
        family = "IPv4"
        gateway = "10.0.0.1"
      }
    }
  }
}

